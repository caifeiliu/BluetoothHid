<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dten.hidroid"
    android:sharedUserId="android.uid.system">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:name="com.dten.hidroid.APP"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher_playstore"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_launcher_playstore"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.dten.hidroid.SplashScreen"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name="com.dten.hidroid.MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dten.hidroid.activity_keyboard_full"
            android:screenOrientation="landscape"
            android:theme="@style/appDialog"
            />
        <activity
            android:name="com.dten.hidroid.ActivityDeviceList"
            android:label="@string/app_name"
            android:theme="@style/appDialog" />
    </application>

</manifest>